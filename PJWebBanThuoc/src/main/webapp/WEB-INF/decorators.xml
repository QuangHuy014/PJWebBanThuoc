<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes><!-- nếu như có cái url nào nằm trong cái excludes thí
    nó sẽ ko apply bất kì giao diện nào -->
        <pattern>/api*</pattern>
    </excludes>
    
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    

 

    <decorator name="web" page="trangchu.jsp">
        <pattern>/homeController</pattern>
    </decorator>

    
  <decorator name="login" page="tranglogin.jsp">
        <pattern>/loginController</pattern>
    </decorator>
    <decorator name="productDetail" page="productDetail.jsp">
        <pattern>/product-Detail</pattern>
    </decorator>
    <decorator name="cart" page="cart.jsp">
        <pattern>/cart</pattern>
    </decorator>

     <decorator name="sanPham" page="sanpham.jsp">
        <pattern>/sanPhamController</pattern>
    </decorator> 
    <decorator name="checkOut" page="trangcheckout.jsp">
        <pattern>/checkController</pattern>
    </decorator> 


</decorators>
